<h1>Listing mail_accounts</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Email verified</th>
      <th>Verify token</th>
      <th>Verify sent date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @mail_accounts.each do |mail_account| %>
      <tr>
        <td><%= mail_account.user %></td>
        <td><%= mail_account.email_verified %></td>
        <td><%= mail_account.verify_token %></td>
        <td><%= mail_account.verify_sent_date %></td>
        <td><%= link_to 'Show', mail_account %></td>
        <td><%= link_to 'Edit', edit_mail_account_path(mail_account) %></td>
        <td><%= link_to 'Destroy', mail_account, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Mail account', new_mail_account_path %>
