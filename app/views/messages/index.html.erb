<h1>Listing messages</h1>

<table>
  <thead>
    <tr>
      <th>Mail account</th>
      <th>Html content</th>
      <th>Treated</th>
      <th>Treated date</th>
      <th>Mail commerce platform</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @messages.each do |message| %>
      <tr>
        <td><%= message.mail_account %></td>
        <td><%= message.html_content %></td>
        <td><%= message.treated %></td>
        <td><%= message.treated_date %></td>
        <td><%= message.mail_commerce_platform %></td>
        <td><%= link_to 'Show', message %></td>
        <td><%= link_to 'Edit', edit_message_path(message) %></td>
        <td><%= link_to 'Destroy', message, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Message', new_message_path %>
