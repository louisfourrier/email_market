<div class="container">

	<div class="col-md-8 col-md-offset-2 nadvence-box">

		<h2 class="page-header text-center nadvence-family">Forgot your password?</h2>

		<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }, :class => "form") do |f| %>
		<%= devise_error_messages! %>

		<div class="form-group">
			<%= f.label :email %>
			<br />
			<%= f.email_field :email, autofocus: true, :class => "form-control" %>
		</div>

		<div class="text-center">
			<%= f.submit "Send me reset password instructions", :class => "btn btn-warning" %>
		</div>
		<% end %>

		<%= render "devise/shared/links" %>

	</div>
</div>
